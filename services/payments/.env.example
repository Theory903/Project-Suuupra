# Payment Gateway Service Configuration

# Service Configuration
SERVICE_NAME=payments
ENVIRONMENT=development
PORT=8084
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/payments?sslmode=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=25
DATABASE_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# UPI Core Service Configuration
UPI_CORE_GRPC=localhost:50051
UPI_CORE_HTTP=http://localhost:8081
UPI_CORE_TIMEOUT=30s
UPI_CORE_MAX_RETRIES=3

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
HMAC_SIGNING_SECRET=your-super-secure-hmac-signing-secret
FIELD_ENCRYPTION_KEY=your-32-character-encryption-key!!
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret-key

# Observability Configuration
LOG_LEVEL=info
LOG_FORMAT=json
JAEGER_ENDPOINT=http://localhost:14268/api/traces
METRICS_PORT=9090

# Business Logic Configuration
MAX_RETRY_ATTEMPTS=3
IDEMPOTENCY_TTL_HOURS=24
WEBHOOK_TIMEOUT_SECONDS=30
MAX_WEBHOOK_RETRIES=5
PAYMENT_INTENT_EXPIRY_MINUTES=15
MAX_REFUND_AGE_DAYS=90

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Risk Assessment Configuration
RISK_ASSESSMENT_ENABLED=true
RISK_HIGH_THRESHOLD=75
RISK_MEDIUM_THRESHOLD=50
DEFAULT_RISK_WEIGHT_AMOUNT=10
DEFAULT_RISK_WEIGHT_VELOCITY=15
DEFAULT_RISK_WEIGHT_DEVICE=20
DEFAULT_RISK_WEIGHT_IP=10
DEFAULT_RISK_WEIGHT_TIME=5
DEFAULT_RISK_WEIGHT_MERCHANT=10

# External Services Configuration
BANK_SIMULATOR_GRPC=localhost:50050
NOTIFICATION_SERVICE_URL=http://localhost:8085
ERP_WEBHOOK_URL=http://localhost:8086/webhooks

# Development/Testing Configuration
ENABLE_MOCK_UPI=false
ENABLE_DEBUG_ENDPOINTS=false
SKIP_AUTH_IN_DEV=false