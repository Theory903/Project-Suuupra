{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../../shared/*"]
    }
  },
  "include": ["src/**/*"],
  "typeRoots": ["node_modules/@types", "src/types"],
  "exclude": ["node_modules", "dist"]
}
