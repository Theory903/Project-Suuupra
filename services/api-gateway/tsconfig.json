{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../../shared/*"]
    },
    "noImplicitAny": false,
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "typeRoots": ["node_modules/@types", "src/types"],
  "exclude": ["node_modules", "dist", "tests", "../../shared/libs/logging/examples"]
}
