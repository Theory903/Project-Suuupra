# Environment Configuration
ENVIRONMENT=development
SERVICE_NAME=llm-tutor
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
HOST=0.0.0.0
PORT=8092
WORKERS=1
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql+asyncpg://llm_tutor:password@localhost:5432/llm_tutor
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=50
REDIS_SESSION_TTL=3600

# Vector Database Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=educational_content
MILVUS_DIMENSION=384

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=educational_content

# LLM Configuration
LLM_MODEL_NAME=microsoft/DialoGPT-large
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_BATCH_SIZE=4

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# RAG Configuration
RAG_TOP_K=10
RAG_RERANK_TOP_K=5
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_SIMILARITY_THRESHOLD=0.7

# Voice Processing Configuration
ASR_MODEL_NAME=openai/whisper-large-v3
TTS_MODEL_NAME=coqui/XTTS-v2
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# Authentication & Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Gateway Integration
API_GATEWAY_URL=http://localhost:8080
IDENTITY_SERVICE_URL=http://localhost:8081

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# External APIs
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
HUGGINGFACE_API_TOKEN=your-huggingface-token
HUGGINGFACE_CACHE_DIR=./models

# Observability
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_HOST=localhost
JAEGER_PORT=6831
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Performance & Scaling
GPU_ENABLED=false
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Safety & Content Filtering
ENABLE_CONTENT_FILTER=true
CONTENT_FILTER_THRESHOLD=0.8
ENABLE_PII_DETECTION=true

# Data Storage
CONTENT_STORAGE_PATH=./data/content
MODEL_STORAGE_PATH=./data/models
LOGS_STORAGE_PATH=./logs

# AWS Configuration (for production)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=your-s3-bucket

# Feature Flags
ENABLE_VOICE_INTERFACE=true
ENABLE_PERSONALIZATION=true
ENABLE_ANALYTICS=true
ENABLE_EXPERIMENTS=false
