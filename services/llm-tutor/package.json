{
  "name": "llm-tutor",
  "version": "1.0.0",
  "description": "AI-powered educational tutoring service with RAG and voice capabilities",
  "main": "src/main.py",
  "scripts": {
    "start": "uvicorn src.main:app --host 0.0.0.0 --port 8092",
    "dev": "uvicorn src.main:app --host 0.0.0.0 --port 8092 --reload",
    "test": "./scripts/test.sh",
    "test:unit": "./scripts/test.sh unit",
    "test:integration": "./scripts/test.sh integration",
    "test:performance": "./scripts/test.sh performance",
    "test:security": "./scripts/test.sh security",
    "test:e2e": "./scripts/test.sh e2e",
    "build": "./scripts/build.sh",
    "deploy": "./scripts/deploy.sh",
    "migrate": "./scripts/migrate.sh",
    "migrate:up": "./scripts/migrate.sh upgrade",
    "migrate:down": "./scripts/migrate.sh downgrade",
    "migrate:reset": "./scripts/migrate.sh reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f llm-tutor",
    "k8s:deploy": "kubectl apply -k infrastructure/k8s/overlays/development",
    "k8s:delete": "kubectl delete -k infrastructure/k8s/overlays/development",
    "lint": "flake8 src/ tests/",
    "format": "black src/ tests/ && isort src/ tests/",
    "type-check": "mypy src/",
    "security-scan": "bandit -r src/",
    "deps-scan": "safety check"
  },
  "keywords": [
    "ai",
    "education",
    "tutoring",
    "llm",
    "rag",
    "voice",
    "python",
    "fastapi",
    "kubernetes"
  ],
  "author": "Suuupra Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/project-suuupra.git",
    "directory": "services/llm-tutor"
  },
  "bugs": {
    "url": "https://github.com/your-org/project-suuupra/issues"
  },
  "homepage": "https://github.com/your-org/project-suuupra/tree/main/services/llm-tutor#readme",
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.11.0"
  },
  "devDependencies": {},
  "dependencies": {},
  "python": {
    "dependencies": {
      "fastapi": "^0.104.1",
      "uvicorn": "^0.24.0",
      "pydantic": "^2.5.0",
      "sqlalchemy": "^2.0.23",
      "asyncpg": "^0.29.0",
      "redis": "^5.0.1",
      "transformers": "^4.36.2",
      "torch": "^2.1.1",
      "langchain": "^0.0.350",
      "openai": "^1.3.7"
    },
    "devDependencies": {
      "pytest": "^7.4.3",
      "pytest-asyncio": "^0.21.1",
      "pytest-cov": "^4.1.0",
      "black": "^23.11.0",
      "flake8": "^6.1.0",
      "mypy": "^1.7.1",
      "bandit": "^1.7.5",
      "safety": "^2.3.5"
    }
  }
}