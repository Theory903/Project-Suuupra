# Application Configuration
UPI_CORE_APP_NAME=upi-core
UPI_CORE_APP_VERSION=1.0.0
UPI_CORE_APP_ENVIRONMENT=development

# Server Configuration
UPI_CORE_SERVER_HOST=0.0.0.0
UPI_CORE_SERVER_PORT=50051
UPI_CORE_SERVER_READ_TIMEOUT=30s
UPI_CORE_SERVER_WRITE_TIMEOUT=30s
UPI_CORE_SERVER_IDLE_TIMEOUT=120s

# Database Configuration
UPI_CORE_DATABASE_HOST=localhost
UPI_CORE_DATABASE_PORT=5432
UPI_CORE_DATABASE_USERNAME=postgres
UPI_CORE_DATABASE_PASSWORD=password
UPI_CORE_DATABASE_DATABASE=upi_core
UPI_CORE_DATABASE_SSL_MODE=disable
UPI_CORE_DATABASE_MAX_OPEN_CONNS=25
UPI_CORE_DATABASE_MAX_IDLE_CONNS=5
UPI_CORE_DATABASE_CONN_TIMEOUT=10s

# Redis Configuration
UPI_CORE_REDIS_HOST=localhost
UPI_CORE_REDIS_PORT=6379
UPI_CORE_REDIS_PASSWORD=
UPI_CORE_REDIS_DB=0
UPI_CORE_REDIS_POOL_SIZE=10

# Kafka Configuration
UPI_CORE_KAFKA_BROKERS=localhost:9092
UPI_CORE_KAFKA_GROUP_ID=upi-core
UPI_CORE_KAFKA_TOPICS_TRANSACTIONS=upi.transactions
UPI_CORE_KAFKA_TOPICS_SETTLEMENTS=upi.settlements
UPI_CORE_KAFKA_TOPICS_EVENTS=upi.events

# Security Configuration
UPI_CORE_SECURITY_PRIVATE_KEY_PATH=./keys/private.pem
UPI_CORE_SECURITY_PUBLIC_KEY_PATH=./keys/public.pem
UPI_CORE_SECURITY_ENABLE_TLS=true
UPI_CORE_SECURITY_TLS_CERT_FILE=./certs/server.crt
UPI_CORE_SECURITY_TLS_KEY_FILE=./certs/server.key

# Logging Configuration
UPI_CORE_LOGGING_LEVEL=info
UPI_CORE_LOGGING_FORMAT=text

# Telemetry Configuration
UPI_CORE_TELEMETRY_ENABLED=true
UPI_CORE_TELEMETRY_SERVICE_NAME=upi-core
UPI_CORE_TELEMETRY_JAEGER_ENDPOINT=http://localhost:14268/api/traces
UPI_CORE_TELEMETRY_METRICS_PORT=9090
UPI_CORE_TELEMETRY_SAMPLE_RATE=0.1
