# Server Configuration
PORT=8088
RTMP_PORT=1935
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgres://massuser:masspass@localhost:5432/mass_live_db?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/5

# S3/MinIO Configuration
S3_BUCKET=suuupra-mass-live
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000  # For MinIO in development

# CDN Configuration
CDN_BASE_URL=https://cdn.suuupra.com/mass-live
CDN_PROVIDER=cloudflare  # cloudflare, cloudfront, fastly

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Streaming Configuration
LLHLS_ENABLED=true
SEGMENT_DURATION=2  # seconds
PLAYLIST_LENGTH=6   # number of segments
MAX_CONCURRENT_STREAMS=1000
MAX_VIEWERS_PER_STREAM=50000

# Transcoding Configuration
TRANSCODING_ENABLED=true
VIDEO_PROFILES=720p,480p,360p
AUDIO_BITRATE=128k

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# CORS
CORS_ORIGINS=http://localhost:3000,https://suuupra.com
CORS_CREDENTIALS=true
