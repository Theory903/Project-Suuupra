# Live Classes Service Configuration

# Server Configuration
NODE_ENV=development
PORT=8086
HOST=0.0.0.0
SERVICE_NAME=live-classes

# Database Configuration
DATABASE_URL=postgresql://liveuser:livepass@localhost:5432/live_classes_db
REDIS_URL=redis://localhost:6379/3

# MediaSoup Configuration
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1

# Recording Configuration
RECORDING_ENABLED=true
RECORDING_STORAGE_PATH=/recordings
S3_BUCKET_NAME=suuupra-live-recordings
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=live-classes
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Feature Flags
ENABLE_RECORDING=true
ENABLE_SCREEN_SHARE=true
ENABLE_WHITEBOARD=true
ENABLE_BREAKOUT_ROOMS=true
MAX_PARTICIPANTS_PER_ROOM=100
MAX_CONCURRENT_ROOMS=1000

# WebRTC Configuration
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=suuupra
TURN_PASSWORD=suuupra-turn-secret
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Chat Configuration
CHAT_MESSAGE_LIMIT=1000
CHAT_HISTORY_DAYS=30

# Notification Configuration
NOTIFICATION_SERVICE_URL=http://localhost:8090
