# Commerce Service Environment Configuration

# Application
ENVIRONMENT=development
SERVICE_NAME=commerce-service
PORT=8084
DEBUG=true

# Database (PostgreSQL for Event Store)
DATABASE_URL=postgresql+asyncpg://commerce:commerce@localhost:5432/commerce_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for Cart Persistence and Messaging)
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Security & Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268
PROMETHEUS_METRICS_PORT=9090

# Business Logic
CART_TTL_HOURS=24
ORDER_TIMEOUT_MINUTES=30
SAGA_RETRY_ATTEMPTS=3
SAGA_RETRY_DELAY_SECONDS=5

# External Services
PAYMENT_SERVICE_URL=http://localhost:8086
INVENTORY_SERVICE_URL=http://localhost:8087
SHIPPING_SERVICE_URL=http://localhost:8088
NOTIFICATION_SERVICE_URL=http://localhost:8085

# Feature Flags
ENABLE_SAGA_ORCHESTRATION=true
ENABLE_EVENT_SOURCING=true
ENABLE_CQRS=true
ENABLE_OPTIMISTIC_LOCKING=true
