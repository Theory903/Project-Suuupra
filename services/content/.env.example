# Application Configuration
NODE_ENV=development
PORT=8082
SERVICE_NAME=content-service

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/content_dev
MONGODB_OPTIONS={}

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=content

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=suuupra-content-dev
S3_BUCKET_REGION=us-east-1
CLOUDFRONT_DOMAIN=

# Authentication & Security
JWT_SECRET=your-jwt-secret-key
JWKS_URI=http://localhost:8081/.well-known/jwks.json
JWT_ISSUER=https://identity.suuupra.local
JWT_AUDIENCE=suuupra-api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=2147483648
ALLOWED_FILE_TYPES=video/mp4,video/webm,application/pdf,image/jpeg,image/png,image/webp,text/html,text/markdown
MULTIPART_CHUNK_SIZE=10485760
UPLOAD_EXPIRY_HOURS=24

# Observability
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
PROMETHEUS_METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# External Services
IDENTITY_SERVICE_URL=http://localhost:8081
NOTIFICATION_SERVICE_URL=http://localhost:8085
ANALYTICS_SERVICE_URL=http://localhost:8087

# Feature Flags
ENABLE_CONTENT_VERSIONING=true
ENABLE_APPROVAL_WORKFLOW=true
ENABLE_WEBHOOK_DELIVERY=true
ENABLE_CONTENT_MODERATION=true

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Content Moderation
ENABLE_VIRUS_SCANNING=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_MS=10000
WEBHOOK_RETRY_ATTEMPTS=3
