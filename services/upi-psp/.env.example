# UPI PSP Service Environment Configuration

# Service Configuration
SERVICE_NAME=upi-psp-service
ENVIRONMENT=development
PORT=8097
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://upi_psp:upi_psp_password@localhost:5434/upi_psp_db?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_COST=12

# UPI Configuration
UPI_ACQUIRER_ID=SUUUPRA
UPI_PSP_ID=SUUUPRAPSP
UPI_MERCHANT_ID=SUUUPRA001

# External Service URLs
UPI_CORE_SERVICE_URL=localhost:50051
PAYMENT_SERVICE_URL=http://localhost:8084
NOTIFICATION_SERVICE_URL=http://localhost:8085

# Observability
PROMETHEUS_METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268

# Development Settings (only for development)
DEBUG=true
HOT_RELOAD=true
AUTO_MIGRATE=true

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# LOG_LEVEL=warn
# DEBUG=false
# AUTO_MIGRATE=false

# SSL/TLS Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Limits
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Email Configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Push Notification Configuration
# FCM_SERVER_KEY=your-fcm-server-key
# APNS_KEY_ID=your-apns-key-id
# APNS_TEAM_ID=your-apns-team-id
