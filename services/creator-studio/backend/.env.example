# Server Configuration
PORT=8089
NODE_ENV=development
API_BASE_URL=http://localhost:8089

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/creator_studio

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_DB=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=suuupra-creator-studio
S3_BUCKET_REGION=us-east-1

# CDN Configuration
CDN_BASE_URL=https://cdn.suuupra.com/creator-studio

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@suuupra.com
FROM_NAME=Suuupra Creator Studio

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://creator.suuupra.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=5368709120
ALLOWED_FILE_TYPES=video/mp4,video/avi,video/mov,video/wmv,video/webm,audio/mp3,audio/wav,audio/aac,image/jpeg,image/png,image/gif

# Video Processing Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
VIDEO_QUALITIES=360p,480p,720p,1080p
DEFAULT_VIDEO_QUALITY=720p

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=300000

# Content Moderation
MODERATION_ENABLED=true
AUTO_APPROVE_VERIFIED_CREATORS=true

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_DELAY=5000

# Cache Configuration
CACHE_TTL=900
CACHE_PREFIX=creator_studio:

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Feature Flags
FEATURE_LIVE_STREAMING=true
FEATURE_ANALYTICS_EXPORT=true
FEATURE_ADVANCED_MONETIZATION=true
FEATURE_COLLABORATION=false

# External Service URLs
VOD_SERVICE_URL=http://localhost:8087
LIVE_CLASSES_SERVICE_URL=http://localhost:8086
MASS_LIVE_SERVICE_URL=http://localhost:8088

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
WEBHOOK_NOTIFICATION_ENABLED=true
