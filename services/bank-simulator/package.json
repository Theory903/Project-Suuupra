{
  "name": "@suuupra/bank-simulator",
  "version": "1.0.0",
  "description": "Mock banking backend for UPI ecosystem simulation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:load": "k6 run tests/load/transaction-load.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "proto:generate": "buf generate",
    "docker:build": "docker build -t bank-simulator .",
    "docker:run": "docker-compose up --build"
  },
  "keywords": [
    "banking",
    "upi",
    "simulation",
    "fintech",
    "grpc",
    "fastify"
  ],
  "author": "Suuupra Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.3",
    "@opentelemetry/exporter-jaeger": "^1.17.0",
    "@opentelemetry/sdk-node": "^0.46.0",
    "@prisma/client": "^5.7.0",
    "fastify": "^4.24.3",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "testcontainers": "^10.4.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
