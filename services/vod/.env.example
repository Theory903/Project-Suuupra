# VOD Service Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8087
DEBUG=false
ENVIRONMENT=development
SERVICE_NAME=vod

# Database Configuration
DATABASE_URL=postgresql://voduser:vodpass@localhost:5432/vod_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/4
REDIS_POOL_SIZE=10

# Storage Configuration
S3_BUCKET_NAME=suuupra-vod-content
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
CDN_BASE_URL=https://cdn.suuupra.com

# Transcoding Configuration
TRANSCODING_ENABLED=true
TRANSCODING_QUEUE=vod-transcoding
TRANSCODING_WORKERS=2
VIDEO_STORAGE_PATH=/tmp/videos
OUTPUT_STORAGE_PATH=/tmp/transcoded

# Video Processing Settings
MAX_FILE_SIZE=5368709120  # 5GB in bytes
ALLOWED_VIDEO_FORMATS=["mp4", "avi", "mov", "mkv", "webm"]
OUTPUT_FORMATS=["mp4", "webm"]
QUALITY_LEVELS=["240p", "360p", "480p", "720p", "1080p"]

# DRM Configuration
DRM_ENABLED=true
WIDEVINE_KEY_SERVER=https://license.widevine.com
FAIRPLAY_KEY_SERVER=https://fps.example.com

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Security
CORS_ORIGINS=["http://localhost:3000", "https://app.suuupra.com"]
ALLOWED_HOSTS=["*"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Observability
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=vod

# Feature Flags
ENABLE_THUMBNAILS=true
ENABLE_WATERMARKING=true
ENABLE_ANALYTICS=true
ENABLE_RECOMMENDATIONS=true

# CDN Configuration
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
FASTLY_SERVICE_ID=your_fastly_service_id

# Notification Configuration
NOTIFICATION_SERVICE_URL=http://localhost:8090
