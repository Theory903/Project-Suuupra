{
  "dashboard": {
    "id": null,
    "title": "API Gateway - Production Dashboard",
    "tags": ["api-gateway", "microservices", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(gateway_requests_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "route",
          "type": "query",
          "query": "label_values(gateway_requests_total{instance=~\"$instance\"}, route)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(gateway_requests_total{instance=~\"$instance\"}[1m]))",
            "legendFormat": "Total RPS"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate (%)",
        "type": "stat",
        "targets": [
          {
            "expr": "100 * sum(rate(gateway_requests_total{instance=~\"$instance\", status_code=~\"5..\"}[5m])) / sum(rate(gateway_requests_total{instance=~\"$instance\"}[5m]))",
            "legendFormat": "5xx Error Rate"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "P99 Latency",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(gateway_request_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le))",
            "legendFormat": "P99 Latency"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Circuit Breakers",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(gateway_circuit_breaker_state{instance=~\"$instance\", state=\"open\"})",
            "legendFormat": "Open Breakers"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Request Rate by Route",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(gateway_requests_total{instance=~\"$instance\", route=~\"$route\"}[1m])) by (route)",
            "legendFormat": "{{route}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "yAxes": [
          {"unit": "reqps", "min": 0},
          {"show": false}
        ],
        "legend": {"show": true, "values": false, "min": false, "max": false, "current": false, "total": false, "avg": false}
      },
      {
        "id": 6,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(gateway_request_duration_seconds_bucket{instance=~\"$instance\"}[1m])) by (le)",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "heatmap": {
          "xBucketSize": null,
          "yBucketSize": null,
          "xBucketNumber": null,
          "yBucketNumber": null
        }
      },
      {
        "id": 7,
        "title": "Status Code Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(gateway_requests_total{instance=~\"$instance\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "yAxes": [
          {"unit": "reqps", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 8,
        "title": "Rate Limiting",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(gateway_rate_limit_hits_total{instance=~\"$instance\"}[1m])) by (limit_key)",
            "legendFormat": "{{limit_key}} hits"
          },
          {
            "expr": "sum(rate(gateway_rate_limit_exceeded_total{instance=~\"$instance\"}[1m])) by (limit_key)",
            "legendFormat": "{{limit_key}} exceeded"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "yAxes": [
          {"unit": "reqps", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 9,
        "title": "Circuit Breaker States",
        "type": "graph",
        "targets": [
          {
            "expr": "gateway_circuit_breaker_state{instance=~\"$instance\"}",
            "legendFormat": "{{service}} - {{state}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "yAxes": [
          {"min": 0, "max": 1},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Queue Depth (AI Services)",
        "type": "graph",
        "targets": [
          {
            "expr": "gateway_ai_queue_depth{instance=~\"$instance\"}",
            "legendFormat": "{{service}} queue"
          },
          {
            "expr": "gateway_concurrent_requests{instance=~\"$instance\"}",
            "legendFormat": "{{service}} in-flight"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "yAxes": [
          {"unit": "short", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{instance=~\"$instance\"}",
            "legendFormat": "{{instance}} RSS"
          },
          {
            "expr": "nodejs_heap_size_used_bytes{instance=~\"$instance\"}",
            "legendFormat": "{{instance}} Heap Used"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "yAxes": [
          {"unit": "bytes", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 12,
        "title": "Top Error Routes",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(gateway_requests_total{instance=~\"$instance\", status_code=~\"5..\"}[5m])) by (route))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true},
              "renameByName": {"Value": "Error Rate (req/s)"}
            }
          }
        ]
      },
      {
        "id": 13,
        "title": "Slowest Routes (P95)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(gateway_request_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (route, le)))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 28},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true},
              "renameByName": {"Value": "P95 Latency (s)"}
            }
          }
        ]
      },
      {
        "id": 14,
        "title": "Service Discovery Health",
        "type": "table",
        "targets": [
          {
            "expr": "gateway_service_instances{instance=~\"$instance\"}",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 28},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true},
              "renameByName": {"Value": "Healthy Instances"}
            }
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(gateway_build_info[1h]) > 0",
          "iconColor": "green",
          "titleFormat": "Gateway Deployment",
          "textFormat": "Version: {{version}}"
        }
      ]
    }
  }
}
