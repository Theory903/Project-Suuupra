{
  "dashboard": {
    "id": null,
    "title": "Content Service - Production Dashboard",
    "tags": ["content", "microservices", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(content_requests_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(content_requests_total{instance=~\"$instance\"}[1m]))",
            "legendFormat": "Total RPS"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate (%)",
        "type": "stat",
        "targets": [
          {
            "expr": "100 * sum(rate(content_requests_total{instance=~\"$instance\", status_code=~\"5..\"}[5m])) / sum(rate(content_requests_total{instance=~\"$instance\"}[5m]))",
            "legendFormat": "5xx Error Rate"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "P99 Latency",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(content_request_duration_seconds_bucket{instance=~\"$instance\"}[5m])) by (le))",
            "legendFormat": "P99 Latency"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Uploads Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(content_uploads_total{instance=~\"$instance\"}[1m]))",
            "legendFormat": "Uploads/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 5,
        "title": "Search Query Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(content_search_queries_total{instance=~\"$instance\"}[1m]))",
            "legendFormat": "Queries/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Indexing Lag",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(content_indexing_lag_seconds{instance=~\"$instance\"})",
            "legendFormat": "Seconds"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 300}
              ]
            }
          }
        }
      }
    ]
  }
}