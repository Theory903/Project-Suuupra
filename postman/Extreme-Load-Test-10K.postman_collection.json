    {
      "name": "ðŸš€ 10K Users - System Health Bombardment",
      "item": [
        {
          "name": "API Gateway Health - 10K Load",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Load-Test",
                "value": "10K-users-{{$randomInt}}"
              },
              {
                "key": "User-Agent",
                "value": "LoadTest-User-{{$randomInt}}/1.0"
              }
            ],
            "url": {
              "raw": "{{base_url}}/healthz",
              "host": ["{{base_url}}"],
              "path": ["healthz"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('API Gateway handles 10K user load', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response time under extreme load', function () {",
                  "    const responseTime = pm.response.responseTime;",
                  "    console.log('10K Load Response time:', responseTime + 'ms');",
                  "    pm.expect(responseTime).to.be.below(5000);",
                  "});",
                  "",
                  "// Track performance metrics",
                  "const responseTime = pm.response.responseTime;",
                  "pm.globals.set('last_10k_response_time', responseTime);",
                  "pm.globals.set('test_timestamp_10k', Date.now());",
                  "",
                  "// Count successful requests",
                  "const successCount = pm.globals.get('success_count_10k') || 0;",
                  "pm.globals.set('success_count_10k', successCount + 1);"
                ]
              }
            }
