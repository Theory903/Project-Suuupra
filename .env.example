# ==============================================================================
# Suuupra EdTech Platform - Unified Environment Configuration
#
# Instructions:
# 1. Copy this file to .env (`cp .env.example .env`)
# 2. Replace the placeholder values with your actual secrets and configuration.
# 3. This file should NOT be committed to version control.
# ==============================================================================

# ------------------------------------------------------------------------------
# GLOBAL PLATFORM SETTINGS
# ------------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=info

# ------------------------------------------------------------------------------
# POSTGRESQL DATABASE
# ------------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -- Individual Database Names --
POSTGRES_DB_IDENTITY=identity
POSTGRES_DB_PAYMENTS=payments
POSTGRES_DB_COMMERCE=commerce
POSTGRES_DB_LEDGER=ledger
POSTGRES_DB_BANK_SIMULATOR=bank_simulator
POSTGRES_DB_UPI_CORE=upi_core
# Add other database names here as services are integrated

# ------------------------------------------------------------------------------
# REDIS CACHE
# ------------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# KAFKA EVENT BUS
# ------------------------------------------------------------------------------
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# ------------------------------------------------------------------------------
# OBSERVABILITY STACK (Jaeger, Prometheus)
# ------------------------------------------------------------------------------
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
COLLECTOR_OTLP_ENABLED=true

# ------------------------------------------------------------------------------
# SERVICE-SPECIFIC CONFIGURATION
# ------------------------------------------------------------------------------

# -- Identity Service --
IDENTITY_JWT_SECRET=your-super-secret-jwt-key-for-development
IDENTITY_JWT_ISSUER=https://identity.suuupra.com
KMS_KEKBASE64=your-kms-kek-base64-encoded-key
SECURITY_MFA_KEKBASE64=your-mfa-kek-base64-encoded-key

# -- API Gateway --
API_GATEWAY_OIDC_DISCOVERY_URL=https://identity.suuupra.com/.well-known/openid-configuration
API_GATEWAY_OIDC_ISSUER=https://identity.suuupra.com
API_GATEWAY_OIDC_AUDIENCE=suuupra-api

# -- Bank Simulator --
BANK_SIMULATOR_GRPC_PORT=50050
BANK_SIMULATOR_HTTP_PORT=3000
BANK_SIMULATOR_HOST=0.0.0.0

# -- UPI Core --
UPI_CORE_GRPC_PORT=50051
UPI_CORE_HTTP_PORT=8081
UPI_CORE_METRICS_PORT=9090

# Add other service-specific variables here
